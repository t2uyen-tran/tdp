<?xml version="1.0" encoding="utf-8"?>
<!--SL-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryColor"
    tools:context=".ui.council.OutstandingActivity">

    <include layout="@layout/titlebar"/>

    <TextView
        android:id="@+id/greetingWithWorkerName_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/normalTextView"
        android:maxLines="2"
        android:hint="Hi WorkerName!" />

    <TextView
        style="@style/smallTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="These are outstanding issues for your action" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/red"
        android:text="Issues in Red - unresolved for > 7 days after first reported" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/outstandingItems_RV"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="@string/back"
            style="@style/normalTextView"
            android:textColor="@color/secondaryTextColor" />

        <Button
            android:id="@+id/generateReport_button"
            style="@style/normalTextView"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="40dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/buttonTint"
            android:text="Generate Report"
            android:textColor="@color/secondaryTextColor"
            />



    </LinearLayout>



</LinearLayout>