<?xml version="1.0" encoding="utf-8"?>
<!--SL: list item view for the RecyclerList View-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outstandingListItem_LO"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/caseID_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/normalTextView"
        android:background="@color/beige"
        android:gravity="left"
        android:paddingLeft="5dp"
        android:text="1000008" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/casePhoto_IV"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/grandcanyon" />


        <!-- Narrative section next to image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical">



            <!-- Category -->
            <TextView
                android:id="@+id/caseCategory_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/reportRowValue"
                android:text="Bus Stop"
                android:paddingLeft="10dp"/>


            <!--Item -->
            <TextView
                android:id="@+id/caseItem_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/reportRowValue"
                android:text="Pothole and edge-break repairs"
                android:paddingLeft="10dp"/>

            <!--Status -->
            <TextView
                android:id="@+id/caseStatus_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/reportRowValue"
                android:text="Pothole and edge-break repairs"
                android:paddingLeft="10dp"/>

            <!--Location -->
            <TextView
                android:id="@+id/caseLocation_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/reportRowValue"
                android:text="Pothole and edge-break repairs"
                android:paddingLeft="10dp"/>

            <!--Time lapsed since last update-->

            <TextView
                android:id="@+id/caseLastUpdatedOn_TV"
                style="@style/reportRowValue"
                android:layout_marginTop="2dp"
                android:text="dd mmm yyyy hh:mm:ss"
                android:paddingLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>